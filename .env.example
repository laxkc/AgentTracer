# AgentTracer Platform - Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/agent_observability

# For Docker containers, use internal hostname:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/agent_observability

# ============================================================================
# API Configuration
# ============================================================================

# Ingest API settings
INGEST_API_HOST=0.0.0.0
INGEST_API_PORT=8000

# Query API settings
QUERY_API_HOST=0.0.0.0
QUERY_API_PORT=8001

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Security (Optional - for future use)
# ============================================================================

# API authentication (not implemented in Phase 1)
# API_KEY=your-secret-api-key-here

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# SDK Configuration (for agents)
# ============================================================================

# Ingest API URL for SDK to POST telemetry
AGENT_INGEST_URL=http://localhost:8000

# Agent identification
AGENT_ID=my_agent
AGENT_VERSION=1.0.0
AGENT_ENVIRONMENT=production

# ============================================================================
# UI Configuration (Optional)
# ============================================================================

# React app API endpoint
VITE_API_BASE_URL=http://localhost:8001

# ============================================================================
# Docker Configuration
# ============================================================================

# PostgreSQL Docker settings
POSTGRES_DB=agent_observability
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# IMPORTANT: Change password in production!
# POSTGRES_PASSWORD=your-strong-password-here

# ============================================================================
# Development Settings
# ============================================================================

# Enable debug mode (not for production)
# DEBUG=false

# Enable auto-reload for development
# RELOAD=true

# ============================================================================
# Notes
# ============================================================================

# 1. Never commit .env file to version control
# 2. Always use strong passwords in production
# 3. Update CORS_ORIGINS with your actual frontend URLs
# 4. Keep API keys secure and rotate regularly
